<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/buttom_sheet"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_100sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.bottomsheet.MealButtomSheetFragment">


    <ImageView
        android:id="@+id/img_buttom_sheet"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="5dp"
        android:src="@color/accent"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:id="@+id/lineer_buttom_sheet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@id/img_buttom_sheet"
        app:layout_constraintTop_toTopOf="@id/img_buttom_sheet"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="5dp">
        <TextView
            android:id="@+id/tv_buttom_sheet_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PALESTÄ°NE"
            android:textColor="@color/g_black"
            android:fontFamily="@font/myfont"
            android:drawableStart="@drawable/ic_area"
            android:drawableTint="@color/g_black"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_buttom_sheet_ct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beef"
            android:textColor="@color/g_black"
            android:fontFamily="@font/myfont"
            android:drawableStart="@drawable/categories"
            android:drawableTint="@color/g_black"
            android:layout_weight="1"/>





    </LinearLayout>

    <TextView
        android:id="@+id/tv_buttom_sheet_meal_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_15sdp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/myfont"
        android:text="Meal Name "
        android:textColor="@color/g_black"
        app:layout_constraintStart_toStartOf="@+id/lineer_buttom_sheet"
        app:layout_constraintTop_toBottomOf="@+id/lineer_buttom_sheet" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_15sdp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/myfont"
        android:text="Read More"
        android:textColor="@color/g_black"
        app:layout_constraintStart_toStartOf="@+id/lineer_buttom_sheet"
        app:layout_constraintTop_toBottomOf="@+id/tv_buttom_sheet_meal_name" />


</androidx.constraintlayout.widget.ConstraintLayout>